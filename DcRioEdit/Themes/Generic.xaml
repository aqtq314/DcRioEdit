<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DcRioEdit">

  <Style TargetType="{x:Type local:OptionPanel}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:OptionPanel}">
          <ContentPresenter ContentSource="CurrentContent" ContentTemplate="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=CurrentContentTemplate}"/>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
